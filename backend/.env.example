# Backend Environment Variables Template
# Copy this to .env and fill in your values

# ===== SERVER CONFIGURATION =====
NODE_ENV=production
PORT=3001

# ===== DATABASE =====
DATABASE_URL="postgresql://username:password@host:port/database?schema=public"
# Example: "postgresql://postgres:password@db.example.supabase.co:5432/postgres?schema=public"

# ===== JWT AUTHENTICATION =====
JWT_SECRET="your-super-secret-jwt-key-min-32-characters"
JWT_EXPIRES_IN=8h

# ===== SUPABASE STORAGE =====
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# ===== EMAIL (NODEMAILER) =====
EMAIL_USER="your-email@gmail.com"
EMAIL_PASS="your-gmail-app-password"
# Get app password: https://myaccount.google.com/apppasswords

# ===== SMS (SEMAPHORE) =====
SEMAPHORE_API_KEY="your-semaphore-api-key"
# Get key from: https://semaphore.co

# ===== CORS =====
FRONTEND_URL="https://your-app.vercel.app"
# For development: http://localhost:5173
# For production: https://your-actual-vercel-url.vercel.app

# ===== OPTIONAL: GPS TRACKING =====
# FLESPI_TOKEN="your-flespi-token"
# FLESPI_DEVICE_ID="your-device-id"
